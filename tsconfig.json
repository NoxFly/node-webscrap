{
    "compilerOptions": {
        "lib": [
            "es2017",
            "es7",
            "es6",
            "esnext"
        ],
        "module": "esnext",
        "outDir": "dist/",
        "target": "esnext",
        "declaration": true,
        "baseUrl": "src",
        "rootDir": "src",
        "esModuleInterop": true,
        "inlineSourceMap": false,
        "listEmittedFiles": false,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
    },
    "exclude": [
        "dist",
        "node_modules"
    ],
    "include": [
        "src"
    ]
}
